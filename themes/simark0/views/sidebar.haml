.widget
  .border
    .inner
      %ul.nav{:role => "navigation"}
        %li.pagenav
          %h2 Pages
          %ul
            %li.page_item.page-item-2.current_page_item
              %a{:href => "http://simulacre.org", :title => "About"} About
            %li.page_item.page-item-89
              %a{:href => "http://simulacre.org/posts/", :title => "Posts"} Posts
        %li
          %h2 Archives
          %ul
            %li
              %a{:href => "http://simulacre.org/2010/03/", :title => "March 2010"} March 2010
            %li
              %a{:href => "http://simulacre.org/2010/02/", :title => "February 2010"} February 2010
            %li
              %a{:href => "http://simulacre.org/2010/01/", :title => "January 2010"} January 2010
            %li
              %a{:href => "http://simulacre.org/2009/12/", :title => "December 2009"} December 2009
        %li.categories
          %h2 Categories
          %ul
            - categories_cnt.each do |name, count|
              %li.cat-item
                %a{:href => "/category/#{name}", :title => "View all posts filed under #{name}"}= "#{name} (#{count})"
